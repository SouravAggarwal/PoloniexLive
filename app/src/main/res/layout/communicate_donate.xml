<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polosoft.sourav.poloniexlive.polosoft.polosoft.sourav.poloniexlive.Communicate.donate">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="307dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Are you Enjoying this app? If yes, Consider to pay for a Coffee :)"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.512" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="347dp"
        android:layout_height="31dp"
        android:text="@string/myBtcAddress"
        android:onClick="btcAddressedClicked"
        android:layout_marginRight="0dp"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="171dp"
        android:layout_height="191dp"
        app:srcCompat="@drawable/d_mybtcaddressimage"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        app:layout_constraintHorizontal_bias="0.508" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:text="Bitcoin Address"
        android:layout_marginTop="0dp"
        android:gravity="end"
android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.36" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Click to Copy)"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView30"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toRightOf="@+id/textView30"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
